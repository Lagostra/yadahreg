{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      ".read": "root.child('users').child(auth.uid).child('roles/admin').exists() === true",
      ".write": "root.child('users').child(auth.uid).child('roles/admin').exists() === true",

      "$uid": {
         ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('roles/admin').exists() === true",
         ".write": "root.child('users').child(auth.uid).child('roles/admin').exists() === true",

         "email": {
           ".write": "$uid === auth.uid"
         },
         "name": {
           ".write": "$uid === auth.uid"
         }
      }
    }
  }
}